<div class="containar">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">


<h2>登録情報変更</h2>
  <% if @user.errors.any? %>
    <div id ="error_messages">
       <%= @user.errors.count %>件のエラーが発生しました
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
<%= form_with model: @user do |f| %>
  <h4>ユーザー画像</h4>
  <%= f.file_field :profile_image, accept: "image/*" %>
  <h4>ユーザー名</h4>
  <%= f.text_field :name, autofocus: true, placeholder:"名前"%>
  <h4>自己紹介</h4>
  <%= f.text_field :introduction %>

  <%= f.submit '保存' %>
<% end %>
 <%= link_to "戻る", user_path(@user) %> 


    </div>
  </div>
</div>
