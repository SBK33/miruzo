<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-12">

          <!-- ユーザーの詳細 -->
          <div>
          <!--  <p>追って共通フォーマットに変更</p> -->
            <h3><%= @user.name %></h3>
            <%= image_tag @user.get_profile_image(300, 300) %>
            <p><%= @user.introduction %></p>
            <p>ID：<%= @user.id %></p>
            <% if @user == current_user %>
              <%= link_to "編集", edit_user_path(@user) %> |
              <!-- 退会（未実装）-->
            <% end %>

          </div>




            <h3>投稿一覧</h3>
            <div>
             <table class="table" style="margin-top: -50px;">

               <thead>
                 <tr>
                   <th></th>
                   <th>タイトル</th>
                   <th>観察日</th>
                   <th>投稿日</th>
                 </tr>

               </thead>
                 <% @posts.each do |post| %>
                   <tbody>

                     <tr>
                       <th>
                          <%= link_to post_path(post.id) do %>
                            <%= image_tag post.get_image(100, 100) %>
                          <% end %>
                       </th>
                       <th>
                          <%= link_to post_path(post.id) do %>
                           <%= post.name %></th>
                          <% end %>
                       <th><%= post.observed_at.strftime('%Y/%m/%d') %></th>
                       <th><%= post.created_at.strftime('%Y/%m/%d') %></th>

                     </tr>
                   </tbody>
                <% end %>
              </div>


        </div>
    </div>
</div>