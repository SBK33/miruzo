<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-12">

          <h2>検索結果</h2>

          <table class="table table-hover table-inverse">
            <!--検索対象モデルがUserの時 -->
            <% if @range == "User" %>
              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td>
                      <%= link_to user_path(user.id) do %>
                          <%= user.name %>
                      <% end %>
                    </td>
                    <td>
                      <%= link_to user_path(user.id) do %>
                          <%= image_tag user.get_profile_image(100, 100) %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            <% else %>
              <!--検索対象モデルがUserではない時(= 検索対象モデルがPostの時) -->
              <tbody>
                <% @posts.each do |post| %>
                  <tr>
                    <td>
                      <%= link_to post_path(post.id) do %>
                        <%= post.name %>
                      <% end %>
                    </td>
                    <td>
                      <%= link_to post_path(post.id) do %>
                        <%= image_tag post.get_image(100, 100) %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            <% end %>
          </table>


        </div>
    </div>
</div>