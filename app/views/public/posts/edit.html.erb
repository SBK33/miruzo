<div class="containar">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>投稿編集</h2>
<% if @post.errors.any? %>
  <div id ="error_messages">
     <%= @post.errors.count %>件のエラーが発生しました
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @post do |f| %>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>観察日時</h4>
  <%= f.text_field :observed_at %>
  <h4>種名</h4>
  <%= f.text_field :name %>
  <h4>ノート</h4>
  <%= f.text_area :note %>
  <!-- <h4>生育ステータス（任意）</h4> -->

  <h4>公開設定</h4>
  <%= f.submit '保存' %>
<% end %>


    </div>
  </div>
</div>
