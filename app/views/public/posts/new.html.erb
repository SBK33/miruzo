<h2>新規投稿</h2>

<%= form_with model: @post do |f| %>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>観察日時</h4>
  <%= f.text_field :observed_at %>
  <h4>種名</h4>
  <%= f.text_field :name %>
  <h4>ノート</h4>
  <%= f.text_area :note %>
  <h4>生育ステータス（任意）</h4>

  <h4>公開設定</h4>
  <%= f.submit '投稿' %>
<% end %>
