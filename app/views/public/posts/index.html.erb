<div class="container px-5 px-sm-0">
    <div>
        <p>
            <%= link_to "新規投稿(headerに移動するか)", new_post_path %>
        </p>
        <h2>投稿一覧</h2>
    </div>
    <div class="row">
        <div class="col-md-3">
            <% @posts.each do |post| %>
              <div>
                <%= link_to post_path(post.id) do %>
                    <%= image_tag post.get_image(100, 100) %>
                <% end %>
                <p>名：<%= post.name %></p>
                <p>説明：<%= post.note %></p>
                <p>ユーザーネーム：<%= post.user.name %></p>
            <!--    <p>緯度：<#%= post.latitude %></p>
                <p>経度：<#%= post.longitude %></p> -->
                <p>住所：<%= post.address %></p>
              </div>
            <% end %>
        </div>

        <div class="col-md-8 offset-md-1">
            <p>投稿一覧（マップ）</p>
            <div class="container">
                    <div id="map"></div>
            </div>
            <%= javascript_pack_tag 'map', 'data-turbolinks-track': 'reload' %>
        </div>
    </div>
</div>
